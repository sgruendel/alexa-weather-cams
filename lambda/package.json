{
  "name": "alexa-weather-cams",
  "version": "1.3.0",
  "description": "Alexa Skill to view DWD weather webcams",
  "main": "index.js",
  "scripts": {
    "reinstall": "rm -rf ./node_modules && npm install",
    "test:unit": "nyc --reporter=lcov --reporter=text mocha test/unit/*",
    "test:integration": "mocha --timeout=20000 test/integration/*",
    "test": "npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgruendel/alexa-weather-cams.git"
  },
  "keywords": [
    "alexa",
    "skill",
    "dwd",
    "weather",
    "webcam",
    "opendata"
  ],
  "author": "Stefan Gr√ºndel",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sgruendel/alexa-weather-cams/issues"
  },
  "homepage": "https://github.com/sgruendel/alexa-weather-cams#readme",
  "dependencies": {
    "ask-sdk-core": "^2.14.0",
    "ask-sdk-model": "^1.86.0",
    "i18next": "^24.2.2",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "alexa-skill-test-framework": "^1.2.4",
    "chai": "^5.1.2",
    "eslint": "^9.20.1",
    "eslint-config-strongloop": "^2.1.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "extends": "strongloop",
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "max-len": [
        "error",
        120,
        4,
        {
          "ignoreComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
        }
      ]
    }
  }
}
